jQuery(function($){$('.itc_loadmore a').click(function(e){var button=$(this).parent(),data={'action':'loadmore','query':itc_loadmore_params.posts,'page':itc_loadmore_params.current_page};$.ajax({url:itc_loadmore_params.ajaxurl,data:data,type:'POST',beforeSend:function(xhr){if(itc_loadmore_params.lang=='ru')button.find('a').text('Загрузка...');else if(itc_loadmore_params.lang=='ua')button.find('a').text('Завантаження...');else if(itc_loadmore_params.lang=='en')button.find('a').text('Loading...')},success:function(data){if(data){if(itc_loadmore_params.lang=='ru'){button.find('a').text('Показать еще');button.before(data)}else if(itc_loadmore_params.lang=='ua'){button.find('a').text('Показати ще');button.before(data)}else if(itc_loadmore_params.lang=='en'){button.find('a').text('Show more');button.before(data)}
window.DISQUSWIDGETS=undefined;jQuery.getScript("//itcua.disqus.com/count.js");itc_loadmore_params.current_page++;if(itc_loadmore_params.current_page==itc_loadmore_params.max_page)
button.remove()}else{button.remove()}}});e.preventDefault()});$('.itc_loadmore_blogs a').click(function(e){var button=$(this).parent(),data={'action':'loadmoreblogs','query':itc_loadmore_params.posts,'page':itc_loadmore_params.current_page};$.ajax({url:itc_loadmore_params.ajaxurl,data:data,type:'POST',beforeSend:function(xhr){if(itc_loadmore_params.lang=='ru')button.find('a').text('Загрузка...');else if(itc_loadmore_params.lang=='ua')button.find('a').text('Завантаження...');else if(itc_loadmore_params.lang=='en')button.find('a').text('Loading...')},success:function(data){if(data){if(itc_loadmore_params.lang=='ru'){button.find('a').text('Показать еще');button.before(data)}else if(itc_loadmore_params.lang=='ua'){button.find('a').text('Показати ще');button.before(data)}else if(itc_loadmore_params.lang=='en'){button.find('a').text('Show more');button.before(data)}
itc_loadmore_params.current_page++;if(itc_loadmore_params.current_page==itc_loadmore_params.max_page)
button.remove()}else{button.remove()}}});e.preventDefault()});$(document).on('click',".carousel-button-right",function(){var carusel=$(this).parents('.carousel');right_carusel(carusel);return!1});$(document).on('click',".carousel-button-left",function(){var carusel=$(this).parents('.carousel');left_carusel(carusel);return!1});$('.carousel').swipe({swipeStatus:function(event,phase,direction,distance,duration,fingerCount,fingerData,currentDirection){if(phase=="start"){}
if(phase=="end"){var carusel=$(this);if(direction=='left'){right_carusel(carusel)}
if(direction=='right'){left_carusel(carusel)}
if(direction=='up'){}
if(direction=='down'){}}},triggerOnTouchEnd:!1,threshold:20});function left_carusel(carusel){var block_width=$(carusel).find('.carousel-block').outerWidth();$(carusel).find(".carousel-items .carousel-block").eq(-1).clone().prependTo($(carusel).find(".carousel-items"));$(carusel).find(".carousel-items").css({"left":"-"+block_width+"px"});$(carusel).find(".carousel-items .carousel-block").eq(-1).remove();$(carusel).find(".carousel-items").animate({left:"0"},500);active=$(carusel).find(".carousel-items .carousel-block").eq(0).attr('id');$(carusel).find(".slider-dot").removeClass("active");$(carusel).find(".slider-dot[for='"+active+"']").addClass("active")}
function right_carusel(carusel){var block_width=$(carusel).find('.carousel-block').outerWidth();$(carusel).find(".carousel-items").animate({left:"-"+block_width+"px"},500,function(){$(carusel).find(".carousel-items .carousel-block").eq(0).clone().appendTo($(carusel).find(".carousel-items"));$(carusel).find(".carousel-items .carousel-block").eq(0).remove();$(carusel).find(".carousel-items").css({"left":"0px"})});active=$(carusel).find(".carousel-items .carousel-block").eq(1).attr('id');$(carusel).find(".slider-dot").removeClass("active");$(carusel).find(".slider-dot[for='"+active+"']").addClass("active")}
function auto_right(carusel){setInterval(function(){if(!$(carusel).is('.hover'))
right_carusel(carusel)},5000)}
$(document).on('mouseenter','.carousel',function(){$(this).addClass('hover')});$(document).on('mouseleave','.carousel',function(){$(this).removeClass('hover')})})